<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

	<PropertyGroup>
		<AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
		<RootNamespace>ocpa.ro.api</RootNamespace>
		<AssemblyName>api</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
	  <Content Remove="web.config" />
	</ItemGroup>

	<ItemGroup>
	  <Reference Include="INIFileParser">
	    <HintPath>References\INIFileParser.dll</HintPath>
	  </Reference>
	  <Reference Include="MathNet.Numerics">
	    <HintPath>References\MathNet.Numerics.dll</HintPath>
	  </Reference>
	  <Reference Include="Newtonsoft.Json">
	    <HintPath>References\Newtonsoft.Json.dll</HintPath>
	  </Reference>
	  <Reference Include="ThorusCommon.IO">
	    <HintPath>..\..\Thorus\bin\ThorusCommon.IO.dll</HintPath>
	  </Reference>
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="web.config">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	</ItemGroup>

	<ItemGroup>
	  <None Update="sqlite3.x64.dll">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="sqlite3.x86.dll">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="FileUpload\" />
	</ItemGroup>

</Project>

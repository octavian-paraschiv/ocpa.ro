{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/ocpa_ro_api_.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "ocpa.ro",
    "Audience": "ocpa.ro",
    "Validity": 900
  }

}
